<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="VirtualPathCore.Views.ParameterControlPanel"
             x:DataType="vm:MainViewModel"
             xmlns:vm="using:VirtualPathCore.ViewModels">

	<Border Margin="12" Background="#1E1E1E" CornerRadius="10" Padding="10">
		<Expander Header="Parameter Control Panel" IsExpanded="True" Foreground="White">
			<ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
				<WrapPanel Margin="10">
					<StackPanel Width="180" Margin="0,0,20,0" Spacing="6">
						<TextBlock Text="MSAA Samples" Foreground="White"/>
						<Slider Minimum="1" Maximum="16" Value="{Binding Samples}"/>
					</StackPanel>

					<StackPanel Width="180" Margin="0,0,20,0" Spacing="6">
						<TextBlock Text="Rotation Angle" Foreground="White"/>
						<Slider Minimum="0" Maximum="360" Value="{Binding RotationAngle}"/>
					</StackPanel>

					<StackPanel Width="180" Margin="0,0,20,0" Spacing="6">
						<TextBlock Text="Scale" Foreground="White"/>
						<Slider Minimum="0.1" Maximum="3.0" Value="{Binding Scale}"/>
					</StackPanel>

					<StackPanel Width="180" Margin="0,0,20,0" Spacing="6">
						<TextBlock Text="Position X" Foreground="White"/>
						<Slider Minimum="-10" Maximum="10" Value="{Binding PositionX}"/>
					</StackPanel>

					<StackPanel Width="180" Margin="0,0,20,0" Spacing="6">
						<TextBlock Text="Position Y" Foreground="White"/>
						<Slider Minimum="-10" Maximum="10" Value="{Binding PositionY}"/>
					</StackPanel>

					<StackPanel Width="180" Margin="0,0,0,0" Spacing="6">
						<TextBlock Text="Position Z" Foreground="White"/>
						<Slider Minimum="-10" Maximum="10" Value="{Binding PositionZ}"/>
					</StackPanel>
				</WrapPanel>
			</ScrollViewer>
		</Expander>
	</Border>
</UserControl>
