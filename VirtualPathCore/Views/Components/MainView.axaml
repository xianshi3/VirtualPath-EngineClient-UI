<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:VirtualPathCore.ViewModels"
             xmlns:opengl="using:VirtualPathCore.Graphics.OpenGL"
             mc:Ignorable="d"
             x:Class="VirtualPathCore.Views.MainView"
             x:DataType="vm:MainViewModel">

	<Design.DataContext>
		<vm:MainViewModel />
	</Design.DataContext>

	<Grid RowDefinitions="*,Auto" ColumnDefinitions="1* 1*">
		<!-- 左侧渲染卡片 -->
		<Border Grid.Row="0" Grid.Column="0" Margin="12" Background="#222" CornerRadius="12" Padding="12">
			<Grid>
				<opengl:Renderer x:Name="glRenderer1" />
				<StackPanel VerticalAlignment="Top" Margin="10" Spacing="4">
					<TextBlock Foreground="White" FontWeight="Bold" FontSize="16" Text="渲染器 1 - Blender C#" />
					<Button Content="执行操作" Width="100" Margin="0,10,0,0"/>
				</StackPanel>
			</Grid>
		</Border>

		<!-- 右侧渲染卡片 -->
		<Border Grid.Row="0" Grid.Column="1" Margin="12" Background="#222" CornerRadius="12" Padding="12">
			<Grid>
				<opengl:Renderer x:Name="glRenderer2" Samples="{Binding ElementName=glRenderer1, Path=Samples}" />
				<StackPanel VerticalAlignment="Top" Margin="10" Spacing="4">
					<TextBlock Foreground="White" FontWeight="Bold" FontSize="16" Text="渲染器 2 - Blender C++" />
					<Button Content="执行操作" Width="100" Margin="0,10,0,0"/>
				</StackPanel>
			</Grid>
		</Border>

		<!-- 底部参数控制面板 -->
		<Border Grid.Row="1" Grid.ColumnSpan="2" Margin="12" Background="#1E1E1E" CornerRadius="10" Padding="10">
			<Expander Header="参数控制面板" IsExpanded="True" Foreground="White">
				<ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
					<WrapPanel Margin="10">
						<StackPanel Width="180" Margin="0,0,20,0" Spacing="6">
							<TextBlock Text="MSAA 采样数" Foreground="White"/>
							<Slider Minimum="1" Maximum="16" Value="{Binding ElementName=glRenderer1, Path=Samples}"/>
						</StackPanel>

						<StackPanel Width="180" Margin="0,0,20,0" Spacing="6">
							<TextBlock Text="旋转角度" Foreground="White"/>
							<Slider Minimum="0" Maximum="360" Value="{Binding RotationAngle}"/>
						</StackPanel>

						<StackPanel Width="180" Margin="0,0,20,0" Spacing="6">
							<TextBlock Text="缩放比例" Foreground="White"/>
							<Slider Minimum="0.1" Maximum="3.0" Value="{Binding Scale}"/>
						</StackPanel>

						<StackPanel Width="180" Margin="0,0,20,0" Spacing="6">
							<TextBlock Text="位置 X" Foreground="White"/>
							<Slider Minimum="-10" Maximum="10" Value="{Binding PositionX}"/>
						</StackPanel>

						<StackPanel Width="180" Margin="0,0,20,0" Spacing="6">
							<TextBlock Text="位置 Y" Foreground="White"/>
							<Slider Minimum="-10" Maximum="10" Value="{Binding PositionY}"/>
						</StackPanel>

						<StackPanel Width="180" Margin="0,0,0,0" Spacing="6">
							<TextBlock Text="位置 Z" Foreground="White"/>
							<Slider Minimum="-10" Maximum="10" Value="{Binding PositionZ}"/>
						</StackPanel>
					</WrapPanel>
				</ScrollViewer>
			</Expander>
		</Border>
	</Grid>
</UserControl>
